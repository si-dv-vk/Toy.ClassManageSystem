<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" prefHeight="320.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vhky.javaeeassignment.client.controllers.LoginPageController">
    <padding><Insets bottom="10" /></padding>
   <ImageView fx:id="cover" fitHeight="225.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
    <TextField fx:id="usernameBox" promptText="ID">
        <padding><Insets bottom="5" left="10" right="10" top="5" /></padding>
        <VBox.margin><Insets bottom="5" left="10" right="10" top="40" /></VBox.margin>
    </TextField>
    <PasswordField fx:id="passwordBox" promptText="Password">
        <padding><Insets bottom="5" left="10" right="10" top="5" /></padding>
        <VBox.margin><Insets bottom="5" left="10" right="10" top="5" /></VBox.margin>
    </PasswordField>
   <HBox alignment="CENTER">
       <VBox.margin><Insets bottom="5" left="10" right="10" top="5" /></VBox.margin>
      <children>
          <ChoiceBox fx:id="identitySelectionBox" />
          <Pane HBox.hgrow="ALWAYS"/>
          <Button fx:id="loginButton" onAction="#onLogin" text="Login" >
              <padding>
               <Insets bottom="5" left="50" right="50" top="5" />
            </padding>
          </Button>
      </children>
   </HBox>
</VBox>
