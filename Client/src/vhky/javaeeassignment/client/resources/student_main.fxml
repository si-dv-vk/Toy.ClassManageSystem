<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="300" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vhky.javaeeassignment.client.controllers.StudentMainPageController">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
   <children>
      <GridPane alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="80.0" minWidth="10.0" prefWidth="158.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0" prefWidth="442.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Name" textAlignment="CENTER" />
            <Label fx:id="nameBox" textAlignment="CENTER" GridPane.columnIndex="1" />
            <Label text="ID" textAlignment="CENTER" GridPane.rowIndex="1" />
            <Label fx:id="idBox" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Gender" textAlignment="CENTER" GridPane.rowIndex="2" />
            <Label fx:id="genderBox" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Birthday" textAlignment="CENTER" GridPane.rowIndex="3" />
            <Label text="Major" textAlignment="CENTER" GridPane.rowIndex="4" />
            <Label text="School" textAlignment="CENTER" GridPane.rowIndex="5" />
             <Label fx:id="birthdayBox" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="3" />
             <Label fx:id="majorBox" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="4" />
             <Label fx:id="schoolBox" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
      </GridPane>
      <HBox prefWidth="260.0">
          <VBox.margin><Insets top="20" /></VBox.margin>
         <children>
            <Button mnemonicParsing="false" text="Check Bulletin" onAction="#onCheckBulletin"/>
             <Pane HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" text="Query Score" onAction="#onQueryScore"/>
             <Pane HBox.hgrow="ALWAYS" />
            <Button alignment="CENTER_RIGHT" mnemonicParsing="false" text="Quit" onAction="#onQuit"/>
         </children>
      </HBox>
   </children>
</VBox>
